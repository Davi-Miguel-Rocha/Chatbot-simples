import nltk
from nltk.chat.util import Chat, reflections
nome=str(input('por favor antes de iniciar a conversa digite seu nome:'))
parcov= parcov = [
   ('oi', ['oi ! como você está ?']),
   ('estou bem obrigado por perguntar', ['seu nome é {}, né ?'.format(nome)]),
   ('sim e o seu ?',['meu nome é danone']),
   ('prazer bot',['O prazer é todo meu.','eu gosto de bolos, e vc ?']),
   ('eu tbm',['meu favorito é o morango, e o seu ?']),
   ('O meu tbm',['que conhecidencia.']),
]
def iniciarchat():
    print(f'bem vindo {nome}')
    chatbot=Chat(parcov,reflections)
    while True:
        resposta=str(input('Você:'))
        if resposta == '':
            print(f'Ei {nome}, ta ai ?')
        elif resposta == 'sair':
            print('até logo !')
            break
        else:
            respchat = chatbot.respond(resposta)
            print('Chat{}',respchat)
nltk.download('punkt')
iniciarchat()
